<div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    You can change phases order simply just dragging rows.
</div>

<form>
    <table id="projectPhases" class="table table-striped table-hover">
        <thead>
        <tr>
            <th colspan="2">Name of the phase</th>
            <th><i class="icon icon-question-sign tooltipTitle" title="Select phases which task are transferred to the new user story on story splitting."></i></th>
            <th colspan="3">Target task count</th>
        </tr>
        </thead>
        <tbody>
        <% _.each(phases, function(phase) { %>
        <tr class="form-group" data-phase-id="<%= phase.id %>">
            <td>
                <i class="icon icon-resize-vertical"></i>
            </td>
            <td>
                <input type="text" name="title[]" class="form-control" value="<%= phase.title %>" placeholder="enter phase name" />
            </td>
            <td>
                <input type="checkbox" name="split[]" value="1" <% if (phase.split) { %><%= checked="checked" %><% } %> />
            </td>
            <td>
                <div class="slider slider-phase-task"></div>
                <input type="hidden" name="tasks[]" value="<%= phase.tasks %>" />
                <input type="hidden" name="order[]" value="<%= phase.order %>" />
                <input type="hidden" name="id[]" value="<%= phase.id %>" />
            </td>
            <td></td>
            <td>
                <button class="btn btn-danger btn-small phaseDelete" type="button">
                    <i class="icon icon-trash"></i>
                </button>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
</form>

<div class="hidden">
    <table id="projectPhasesNew">
        <tr class="control-group">
            <td>
                <i class="icon-resize-vertical"></i>
            </td>
            <td>
                <input type="text" name="title[]" class="form-control" value="" placeholder="enter phase name" />
            </td>
            <td>
                <input type="checkbox" name="split[]" value="1" />
            </td>
            <td>
                <div class="slider slider-phase-task"></div>
                <input type="hidden" name="tasks[]" value="" />
                <input type="hidden" name="order[]" value="" />
                <input type="hidden" name="id[]" value="" />
            </td>
            <td></td>
            <td>
                <button class="btn btn-danger btn-small phaseDelete" type="button">
                    <i class="icon icon-trash"></i>
                </button>
            </td>
        </tr>
    </table>
</div>