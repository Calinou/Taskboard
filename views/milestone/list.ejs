
    <table id="projectMilestones" class="table table-striped table-hover table-condensed">
        <thead>
        <tr>
            <th></th>
            <th class="col-md-8">Milestone</th>
            <th class="col-md-2">Deadline</th>
            <th class="col-md-2 text-right">Stories</th>
        </tr>
        </thead>
        <tbody>
        <% _.each(milestones, function(milestone) { %>
        <tr>
            <td class="actionMenu">
                <div class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="100" href="#">
                        <i class="icon icon-chevron-down"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#" class="icon"><i class="icon icon-wrench"></i> Edit milestone</a></li>
                        <li class="divider"></li>
                        <li><a href="#" class="icon text-danger"><i class="icon icon-remove"></i> Delete milestone</a></li>
                    </ul>
                </div>
            </td>
            <td>
                <%= milestone.title %>
            </td>
            <td>
                <%= milestone.deadlineFormatted() %>
            </td>
            <td class="text-right">
                <% if (milestone.stories.length > 0) { %>
                    <span class="tooltipDiv">
                        <%= milestone.stories.length %>
                        <div class="tooltipDivContainer">
                            <h1>Attached stories</h1>
                            <div>
                                <ul class="list-unstyled">
                                <% _.each(milestone.stories, function(story) { %>
                                    <li><a href="javascript: void(0);" data-story-id="<%= story.id %>"><%= story.title %> (<%= story.estimate %>)</a></li>
                                <% }) %>
                                </ul>
                            </div>
                        </div>
                    </span>
                <% } else { %>
                    <%= milestone.stories.length %>
                <% } %>
            </td>
        </tr>
        <% }) %>
        </tbody>
    </table>
