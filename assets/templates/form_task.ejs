<script id="task-form-new" type="text/x-handlebars-template">
    <form id="formTaskNew" class="form-horizontal">
        <input type="hidden" name="storyId" value="{{storyId}}" />
        <input type="hidden" name="phaseId" value="{{phaseId}}" />

        <fieldset>
            <div class="control-group required">
                <label class="control-label" for="formTaskNewTitle">Title</label>
                <div class="controls">
                    <input id="formTaskNewTitle" name="title" type="text" placeholder="enter task title" class="span3" required="required">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="formTaskNewTypeId">Type</label>
                <div class="controls">
                    <select id="formTaskNewTypeId" name="typeId" class="span3">
                        {{#each types}}
                        <option value="{{id}}">{{title}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="formTaskNewOwner">Owner</label>
                <div class="controls">
                    <select id="formTaskNewOwner" name="userId" class="span3">
                        <option value="0">-- select --</option>
                        {{#each users}}
                        <option value="{{id}}">{{fullname}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="formTaskNewDescription">Description</label>
                <div class="controls">
                    <textarea id="formTaskNewDescription" name="description" class="span3" placeholder="enter task description"></textarea>
                </div>
            </div>
        </fieldset>
    </form>
</script>

<script id="task-form-edit" type="text/x-handlebars-template">
    <form id="formTaskEdit" class="form-horizontal">
        <fieldset>
            <div class="control-group required">
                <label class="control-label" for="formTaskEditTitle">Title</label>
                <div class="controls">
                    <input id="formTaskEditTitle" name="title" type="text" value="{{title}}" placeholder="enter task title" class="span3" required="required">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="formTaskEditTypeId">Type</label>
                <div class="controls">
                    <select id="formTaskEditTypeId" name="typeId" class="span3">
                        {{#each types}}
                        <option value="{{id}}" {{#ifItemSelected id ../typeId}}selected="selected"{{/ifItemSelected}}>{{title}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="formTaskEditOwner">Owner</label>
                <div class="controls">
                    <select id="formTaskEditOwner" name="userId" class="span3">
                        <option value="0">-- select --</option>
                        {{#each users}}
                        <option value="{{id}}" {{#ifItemSelected id ../userId}}selected="selected"{{/ifItemSelected}}>{{fullname}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="formTaskEditDescription">Description</label>
                <div class="controls">
                    <textarea id="formTaskEditDescription" name="description" class="span3" placeholder="enter task description">{{description}}</textarea>
                </div>
            </div>
        </fieldset>
    </form>
</script>